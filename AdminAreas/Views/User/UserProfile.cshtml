@using MoBaEsport.Application.Systems.UserServiceModel
@model UserViewModel
@{
    ViewData["Title"] = "Profile";
}

<h1>@ViewData["Title"]</h1>

<img class="img-profile" src="@Model.ImageUrl" width="50dp" height="50dp"/>

<table>
    <tbody>
        <tr>
            <td>
                FullName:
            </td>
            <td>
                @Model.Fullname
            </td>
        </tr>
        <tr>
            <td>
                Gender:
            </td>
            <td>
                @Model.Gender
            </td>
        </tr>
        <tr>
            <td>
                Date of birth:
            </td>
            <td>
                @Model.DOB
            </td>
        </tr>
        <tr>
            <td>
                Phone Number:
            </td>
            <td>
                @Model.Phone
            </td>
        </tr>
        <tr>
            <td>
                Nation:
            </td>
            <td>
                @Model.Nation
            </td>
        </tr>
        <tr>
            <td>
                City:
            </td>
            <td>
                @Model.City
            </td>
        </tr>
        <tr>
            <td>
                Email:
            </td>
            <td>
                @Model.Email
            </td>
        </tr>
    </tbody>
</table>
